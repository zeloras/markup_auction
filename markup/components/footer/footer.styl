.footer-copyrights {
    display: inline-block;
    font-size: 15px;
    background-color: #110025;
    padding: 10px 10px 15px 10px;

    &__link {
        color: rgba(28, 196, 238, 1);
        transition: color 400ms;

        &:hover {
            color: rgba(28, 196, 238, 0.8);
        }
    }
}

.footer {
    color: #fff;
    padding-top: 75px;

    &__title {
        color: #fff;
        font-size: 40px;
        letter-spacing: 3px;
        font-weight: 700;
        padding-bottom: 50px;
    }

    &__navigation {
        display: flex;
        padding-top: 50px;
    }

    &__menu.main-menu {
        align-self: center;
        padding-left: 30px;
        padding-right: 30px;
    }

    &__copyrights {
        text-align: center;
        padding-top: 10px;
        font-weight: 700;
    }
}

@media (max-width: 1200px) {
    .footer {
        &__menu.main-menu {
            padding-left: 15px;
            padding-right: 15px;
        }
    }
}

@media (max-width: 992px) {
    .footer {
        text-align: center;

        &__logo {
            padding-bottom: 30px;
        }

        &__navigation {
            flex-direction: column;
        }

        &__menu.main-menu {
            display: none;
        }
    }
}

@media (max-width: 768px) {
    .footer {
        padding-top: 50px;

        &__title {
            font-size: 25px;
            padding-bottom: 20px;
        }
    }
}
