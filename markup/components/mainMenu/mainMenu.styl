.main-menu {
    padding-right: 10px;
    &__list {
        display: flex;
    }

    &__item {
        padding-right: 12px;

        &:last-of-type {
            padding-right: 0;
        }
    }

    &__link {
        font-weight: 300;

        &:hover {
            color: #00c7f7;
        }
    }
}
