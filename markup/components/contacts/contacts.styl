.contacts {
    padding-top: 20px;
    padding-left: 15px;

    &__description {
        font-size: 11px;
        letter-spacing: 1px;
    }

    &__title {
        padding-bottom: 4px;
    }
}

.contacts-information {
    &__number {
        position: relative;
        font-size: 18px;
        letter-spacing: 2px;
        font-weight: 700;

        &:before {
            content: '';
            background-image: url('%=static=%general/contacts-information__number.png');
            background-repeat: no-repeat;
            position: absolute;
            display: inline-block;
            padding: 8px;
            left: -25px;
            background-size: 16px;
            top: 5px;
        }
    }
}

.footer__contacts .contacts {
    padding-top: 40px;

    &:first-of-type {
        padding-top: 20px;
    }
}

@media (max-width: 992px) {
    .footer__contacts .contacts {
        max-width: 200px;
        margin: 0 auto;
    }

    .header-contacts {
        .contacts {
            padding-left: 45px;
        }
    }
}
