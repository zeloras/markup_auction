.header {
    display: flex;
    color: #fff;
    padding-top: 5px;
    padding-bottom: 30px;

    &__mobile {
        display: flex;
    }

    &__menu {
        align-self: center;
        padding-left: 25px;
        padding-top: 60px;
    }

    &__social {
        align-self: center;
        padding-right: 40px;
        padding-left: 12px;
        padding-top: 60px;
    }

    &__login {
        padding-top: 30px;
    }
}

.header-mobile-close {
    display: none;
}

@media (max-width: 1200px) {
    .header {
        &__menu {
            padding-left: 5px;
        }

        &__social {
            display: none;
        }
    }
}

@media (max-width: 992px) {
    .header-mobile-close {
        display: block;
        position: absolute;
        position: absolute;
        font-size: 25px;
        font-weight: 700;
        left: 10px;
        top: 10px;
        cursor: pointer;
        padding: 5px;
    }

    .header {
        display: block;
        text-align: center;

        &__logo {
            text-align: center;
            display: inline-block;
            vertical-align: top;
        }

        &__menu {
            padding-left: 5px;
        }

        &__mobile {
            position: fixed;
            right: -280px;
            max-width: 250px;
            background: #1b0135;
            top: 0;
            bottom: 0;
            flex-direction: column-reverse;
            justify-content: flex-end;
            z-index: 9;
            box-shadow: 0 0 13px rgba(28,196,238,0.6);
            transition: right 500ms;

            &.active {
                right: 0;
            }
        }

        &__social {
            display: block;
            padding: 20px 0 0 0;
        }

        .header-mobile {
            display: inline-block;
            vertical-align: top;
            border-top: 2px solid rgba(28, 196, 238, 0.8);
            border-bottom: 2px solid rgba(28, 196, 238, 0.8);
            padding: 8px 15px;
            cursor: pointer;
            position: absolute;
            right: 25px;
            top: 50px;
            transition: border-top 400ms, border-bottom 400ms;

            &:before {
                content: '';
                position: absolute;
                padding: 1px 15px;
                border-bottom: 2px solid rgba(28, 196, 238, 0.8);
                top: 5px;
                left: 0;
                transition: border-bottom 400ms;
            }

            &:hover {
                border-top: 2px solid rgba(28, 196, 238, 1);
                border-bottom: 2px solid rgba(28, 196, 238, 1);

                &:before {
                    border-bottom: 2px solid rgba(28, 196, 238, 1);
                }
            }
        }
    }
}
